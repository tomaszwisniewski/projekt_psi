<div class="col-md-9">
  <div class="row signin">
       <div class="mainbox col-md-8 col-sm-offset-1">
          <div class="panel panel-default">
              <div class="panel-heading"><h2 class="panel-title"><span class="glyphicon glyphicon-lock"> </span> <strong>Log in </strong></h2> <%= link_to 'Forgot password?', new_password_reset_path, :class => "forgot_password" %></div>
              <div class="panel-body">
                     <%= form_tag sessions_path do %>
                        <div class="form-group">
                          <%= label_tag :email %>
                          <%= text_field_tag :email, params[:email], :class => "form-control", :style => "border-radius:4px",
                          :placeholder => "Email"%>
                        </div>
                        <div class="form-group">
                          <%= label_tag :password %>
                          <%= password_field_tag :password, params[:password], :class => "form-control", :style => "border-radius:4px",
                          :placeholder => "Password" %>
                        </div>
                        <%= submit_tag "Log In", :class => "btn btn-success" %>
                        <p class="pull-right">Don't have an account! <%= link_to "Sign up for free", signup_path %></p>
                  <% end %>
              </div>
          </div>
      </div>
    </div>
</div>