<%= form_for(@order, :html => { :multipart => true, :class => "form" }) do |f| %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <h2 class="text-center" style="margin-top:-60px">
     <span class="glyphicon glyphicon-pencil"></span>
      New note
  </h2>
  </br>

   <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Enter name" %>
   </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control", :rows => "8", :placeholder => "Enter description" %>
  </div>

  <%= f.label :price %>
  <div class="input-group col-md-4">
    <span class="input-group-addon">$</span>
    <%= f.text_field :price, :class => "form-control", :placeholder => "Enter price" %>
  </div>

</br>
  <div class="form-group">
    <%= f.label :category %>
    
    <%= collection_select(:order, :category_id, Category.order("name ASC"), :id, :name, {}, { :class => "form-control" }) %>
  </div>

 <!--  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :class => "form-control", :placeholder => "Enter address" %>
  </div> -->
  <p>
    <%= f.file_field :image %>
  </p>



    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to "Cancel", current_user, :class => 'btn btn-danger'  %>
    

<% end %>
